{
  "sources": [
   "dist/**"
  ],
  "extraDependencies": [],
  "builds": [
    {
	  "name": "HTML",
	  "browserCapabilities": ["es2015", "push", "serviceworker", "modules"],
      "html": { "minify": false},
      "css": { "minify": false},
      "js": { "minify": false, "compile": false},
	  "bundle": {             
		"inlineCss": false,          
		"inlineScripts": false,       
		"rewriteUrlsInTemplates": false, 
		"sourcemaps": false,          
		"stripComments": false   
	  },
      "addServiceWorker": false,
      "addPushManifest": false
    }
  ],
  "moduleResolution": "node",
  "npm": true,
  "lint": {
    "rules": [
      "polymer-3"
    ]
  }
}
